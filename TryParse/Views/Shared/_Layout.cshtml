<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TryParse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TryParse.styles.css" asp-append-version="true" />
</head>
<body>
    <style>
        #label {
            padding-right: 20px;
            padding-left: 20px;
            margin-bottom: 5px;
            box-shadow: 10px 5px 5px @randcolor();
        }
    </style>

    <header class="p-3 text-dark bg-dark overflow-hidden">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <span id="label" class="display-4 fs-1 mx-auto text-white-50 border border-secondary">Try2Parse</span>
                <ul id="fcknav" class="nav col-12 col-lg-auto me-lg-auto justify-content-center mb-md-0 position-static top-0 end-0">
                    <li><strong><a href="~/" class="nav-link px-3 hoverable text-secondary">Home</a></strong></li>
                    <li><strong><a href="~/Home/Privacy" class="nav-link hoverable px-3 text-white">Privacy</a></strong></li>
                    <li><button type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasTop" aria-controls="offcanvasTop" class="btn btn-outline-secondary px-3 py-2 text-white"><strong>About</strong></button></li>
                </ul>
            </div>
        </div>
    </header>


    <div class="offcanvas offcanvas-top" style="background-image: url('https://img.freepik.com/free-vector/white-abstract-background-design_23-2148825582.jpg?w=1380&t=st=1667398269~exp=1667398869~hmac=2602f9d879a2373ea8cb1891552229392da6436e9c0afbd84edc2e6788255cf4');" tabindex="-1" id="offcanvasTop" aria-labelledby="offcanvasTopLabel">
        <div class="offcanvas-header">
            <h1 id="offcanvasTopLabel" class="offcanvas-title fw-normal mx-auto">A <strong>Try2Parse</strong> Project</h1>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>

        <hr style="margin: 0 20% 0 20%;" />

        <div class="offcanvas-body text-center" style="margin-right: 20px; margin-left: 20px;">
            <p class="mx-3" style="font-size: larger; font-family: 'Segoe UI'">
                Классика Расчленинграда. В реке под Петербургом нашли сумку с женскими ногами

                В сумке оказались отрезанные по таз две женские ноги. На ногах — следы педикюра. По другим источникам предварительно известно, что конечности были отсечены в районе колена каким-то острым рубящим предметом. Сообщается, что останки могли находилиться в воде больше недели.

                На место уже выехали криминалисты и следователи.
                Возбуждено уголовное дело по статье об убийстве.
            </p>
            <p class="mx-auto text-danger">
                TODO: Здесь будет контент!
            </p>
        </div>
    </div>

    <div class="container">
        <main role="main" class="p-3">
            @RenderBody()
        </main>
    </div>

    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <p class="ms-4 col-md-4 mb-0 text-muted">&copy; 2022 Nanomachines Company, Inc</p>

            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="mx-auto my-auto bi bi-code-slash" viewBox="0 0 16 16">
                <path d="M10.478 1.647a.5.5 0 1 0-.956-.294l-4 13a.5.5 0 0 0 .956.294l4-13zM4.854 4.146a.5.5 0 0 1 0 .708L1.707 8l3.147 3.146a.5.5 0 0 1-.708.708l-3.5-3.5a.5.5 0 0 1 0-.708l3.5-3.5a.5.5 0 0 1 .708 0zm6.292 0a.5.5 0 0 0 0 .708L14.293 8l-3.147 3.146a.5.5 0 0 0 .708.708l3.5-3.5a.5.5 0 0 0 0-.708l-3.5-3.5a.5.5 0 0 0-.708 0z" />
            </svg>

            <ul class="nav col-md-4 justify-content-end me-3">
                <li class="nav-item"><a href="~/" class="ms-3 nav-link px-2 hoverable text-muted">Home</a></li>
                <li class="nav-item"><a href="~/Home/Privacy" class="ms-3 nav-link px-2 hoverable text-muted">Privacy</a></li>
                <li class="nav-item"><a data-bs-toggle="offcanvas" data-bs-target="#offcanvasTop" aria-controls="offcanvasTop" class="ms-3 nav-link hoverable px-2 text-muted">About</a></li>
            </ul>
        </footer>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


@{
    string randcolor() => new string[] { "rebeccapurple", "yellow", "crimson", "deeppink" }[(new Random()).Next(0, 4)];
}